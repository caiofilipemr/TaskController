<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Tarefas</h1>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
      <tr class="table-header-bg-color">
        <th>Código</th>
        <th>Título</th>
        <th>Criado por</th>
        <th>Status</th>
        <th>Data início</th>
        <th title="Data prevista finalização">Data prevista</th>
        <th>Prioridade</th>
      </tr>
      </thead>

      <tbody>
      <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to "# #{task.id}", edit_task_path(task) %></td>
            <td><%= link_to task.title, edit_task_path(task) %></td>
            <td><%= task.user_created.name %></td>
            <td><%= STATUS[task.status].first %></td>
            <td><%= task.init_date %></td>
            <td><%= task.expected_completion_date %></td>
            <td><span class="label <%= PRIORITY[task.priority][1] %> col-sm-12"><%= PRIORITY[task.priority].first %></span></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'Nova tarefa', new_task_path, class: 'btn btn-primary' %>
</div>